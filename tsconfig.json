    "compilerOptions": {
        "target": "ES5",
        "module": "commonjs",
        "strict": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "esModuleInterop": true
    },
    "include": [
        "src/**/*.ts",
        "src/test/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "typings",
        "**/*.spec.ts"
    ]
}